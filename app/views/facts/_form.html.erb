<%= simple_form_for @fact do |f| %>
  <% if @fact.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@fact.errors.count, "error")} prohibited this post from being saved:" %>
      </h2>
      <ul>
        <% @fact.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
          <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.input :context, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.button :submit %>
  </div>
<% end %>